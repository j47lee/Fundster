<!DOCTYPE html>
<html>
<head>
  <title>FundApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <%= flash[:notice] %>
</div>
<% if current_user %>
<ul>
  <li> Welcome back <%= current_user.first_name %></li>
  <li><%= link_to("Logout", sessions_path, method: :delete) %></li>
</ul>
<% else %>
<ul>
  <li><%= link_to("Log in", sessions_path) %></li>
</ul>
<% end %>
<%= yield %>

</body>
</html>
