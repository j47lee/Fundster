<!DOCTYPE html>
<html>
<head>
  <title>Fundster</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Fundster</a>
      </div>
    </div>
  </nav>

<div><%= link_to "list of friends", users_path %> | <%= link_to "list of items", items_path %></div>

  <% if current_user %>
    <%= link_to "My Page", user_path(current_user.id) %></div>
  <% end %>

  <% if current_user %>
    <%= link_to "List of my friends", users_path %></div>
  <% end %>


<% flash.each do |first_name, message| %>
  <!-- <div class="flash-message flash-message-<%= first_name %>"> -->
  <div class="alert alert-danger" role="alert">    <!-- takes from SessionsController -->
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <%= message %>
  </div>
<% end %>

<% if current_user %>
  <div>Hello, you are logged in as <%= current_user.first_name %> (application.html.erb)</div>
  <%= link_to 'Logout', session_path(session), method: :delete%>
<%else%>
  <%= link_to "Please Login (application.html.erb)", new_session_path %>
  <%= link_to "Please Signup (application.html.erb)", new_user_path %>
<%end%>

<%= yield %>

</body>
</html>
