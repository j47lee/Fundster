<!DOCTYPE html>
<html>
<head>
  <title>FundApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |first_name, message| %>
     <div class="flash-message flash-message-<%= first_name %>">
    <%= message %>
   </div>
<% end %>
<% if current_user %>
  <p>Hello, <%= current_user.email %></p>
  <%= link_to 'Logout', session_path(session), method: :delete%>
<%else%>
  <%= link_to "Please Login", new_session_path %>
<%end%>
<%= yield %>
</body>
</html>
