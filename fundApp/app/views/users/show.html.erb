<h1><%= @user.first_name %> <%= @user.last_name %></h1>
<% @user.items.each do |i| %>
<h2><%= i.name %><h2>
<h3><%= i.price %></h3>
<h3>Percent Funded: <%= i.progress %>%</h3>

<!--update the style="width: 30%" to update progress bar -->
<div class="progress">
  <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 24%">
    <span class="sr-only">Percent Complete (success)</span>
  </div>
</div>

<%= image_tag(i.picture) %>
<p><%= i.description %></p>

<%end%>

<p>Find me in app/views/users/show.html.erb</p>
<p>ID: <%= @user.id %></p>
<p><%= @user.email %></p>
