<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.erb</p>

<% @items.each do |i| %>
<div><%= i.name %></div>
<div>$<%= i.price %></div>
<%= image_tag(i.picture) %>
<div>Item description: <%= i.description %></div>

<!--TONY-->
<%= link_to "Add to wish list", add_item_to_user_path(:item => i.id) %>
<% end %>
